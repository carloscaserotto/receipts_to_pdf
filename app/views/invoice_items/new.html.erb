<h1>New Article</h1>

<%= form_with model: @invoice_item do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :description %><br>
    <%= form.text_field :description %>
  </div> 
  <div>
    <%= form.label  :price %><br>
   <%= form.number_field  :price, in: 1.0..20000.0, step: 0.5 %>
   
  </div>
  <div>
    <%= form.label :qty %><br>
    <%= form.number_field :qty, in: 1.0..20.0, step: 1%>
  </div>
  
  
  <div>
    <%= form.submit %>
  </div>
<% end %>
